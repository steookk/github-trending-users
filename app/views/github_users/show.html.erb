<!-- user info  -->
<div class="panel panel-default">
	<div class="panel-body row">

		<div class="col-xs-3">
			<%= gravatar_for @github_user %>
		</div>

		<div class="col-xs-9">
			<h3><%= @github_user.name %></h3>
			<span><%= @github_user.email || 'No public email'%></span>
		</div>

	</div>
</div>

<!-- ........... repos ........... -->
<div class="row">
	<div class="col-xs-offset-5 col-xs-2">
		<ul class="pagination">
			<li class="active">
				<span>Repositories</span>
			</li>
		</ul>
	</div>
</div>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Name</th>
			<th>Language</th>
			<th>Github page</th>
		</tr>
	</thead>
	<tbody>
		<% @github_user.repositories.each do |repository| %>
			<tr>
				<td><%= link_to repository.name, repository_path(repository) %></td>
				<td><%= repository.language %></td>
				<td><a href="<%= repository.html_url %>">See it in Github</a></td>
			</tr>
		<% end %>
	</tbody>
</table>